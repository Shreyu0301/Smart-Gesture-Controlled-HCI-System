@startuml
title Smart Gesture-Controlled HCI System - Use Case Diagram

left to right direction
skinparam packageStyle rectangle

actor "End User" as User
actor "System Administrator" as Admin #LightBlue

rectangle "Smart Gesture-Controlled HCI System" {
    
    package "Gesture Control Features" {
        usecase "Control Mouse Cursor" as UC1
        usecase "Adjust System Volume" as UC2
        usecase "Control Screen Brightness" as UC3
        usecase "Navigate Browser Tabs" as UC4
        usecase "Switch Windows/Applications" as UC5
        usecase "Play Games with Gestures" as UC6
        usecase "Type with Virtual Keyboard" as UC7
        usecase "Launch Custom Applications" as UC8
    }
    
    package "Configuration Management" {
        usecase "Customize Gesture Mappings" as UC9
        usecase "View Tutorial Animations" as UC10
        usecase "Sync Configuration to Cloud" as UC11
        usecase "Load Saved Configuration" as UC12
    }
    
    package "System Management" {
        usecase "Activate/Deactivate\nGesture Recognition" as UC13
        usecase "Monitor Camera Feed" as UC14
        usecase "View Current Mode & Action" as UC15
        usecase "Manage MongoDB Connection" as UC16
    }
    
    package "Hand Tracking Core" {
        usecase "Detect Hand Landmarks" as UC17
        usecase "Classify Finger States" as UC18
        usecase "Stabilize Gesture Detection" as UC19
    }
    
    package "Platform Integration" {
        usecase "Execute System Commands" as UC20
        usecase "Control Audio APIs" as UC21
        usecase "Manage Window Focus" as UC22
        usecase "Simulate Input Events" as UC23
    }
}

